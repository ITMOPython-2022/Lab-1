def plot_graph():
        # Задаем размеры графика
    height = 9  # минимальная высота графика   
    width = 20  # ширина графика (по оси x)

        # Выводим график функции y = x / 2
    for y in range(height, -1, -1):
        row = ""
        for x in range(width):
        # Вычисляем значение функции y = x / 2
            fx = x / 2            # Если значение функции близко к текущей строке (по оси y), ставим точку
            if abs(fx - y) < 0.5: 
                row += "*"
            else:            
                 row += " "
        print(row)
# Вызов функции для построения графика
plot_graph()
